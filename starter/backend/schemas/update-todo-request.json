{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Update todo request schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "pattern": "^.*[a-zA-Z0-9]+.*$"
    },
    "dueDate": {
      "type": "string",
      "minLength": 10
    },
    "done": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}